<div class="container">
  <div class="row g-3">
    <div class="col-md-12">
      <div class="title_page d-flex justify-content-center align-items-center">
        Forgot your password?
      </div>
    </div>

      <%= form_for(resource, as: resource_name, url:password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="col-md-12 d-flex justify-content-center mt-2">
      <div class="col-md-6">
        <%= f.label :email , class: "form-label " %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mt-2 border border-dark" %>
      </div>
    </div>
    <div class="col-md-12 d-flex justify-content-center mt-2 ale">
      <div class="col-md-6 d-flex justify-content-center">
        <%= render"users/shared/error_messages", resource: resource %>
      </div>
    </div>
    <div class="col-md-12 d-flex justify-content-center">
        <div class="col-md-6 d-flex justify-content-center">
          <%= f.submit "Send me reset password instructions" ,class: "btn btn-dark btn-w mt-2" %>
        </div>
    </div>
  <div class="col-md-12 d-flex justify-content-center mt-2">
    <div class="col-md-6 d-flex justify-content-end">
      <%= link_to "Sign in", new_session_path(resource_name),class: "btn btn-outline-dark btn-sm"%>
    </div>
  </div>
  <div class="col-md-12 d-flex justify-content-center mt-2">
    <div class="col-md-6 d-flex justify-content-end">
      <%= link_to "Sign up", new_registration_path(resource_name),class: "btn btn-outline-dark btn-sm"%>
    </div>
  </div>
</div>
</div>
<%end%>
