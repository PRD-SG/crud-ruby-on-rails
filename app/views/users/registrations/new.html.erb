<div class="container">
  <div class="row g-3">
    <div class="col-md-12">
      <div class="title_page d-flex justify-content-center align-items-center">
        Sign up
      </div>
    </div>
  <%= form_for(resource, as: resource_name,url:registration_path(resource_name)) do |f| %>
  <div class="col-md-12 d-flex justify-content-center mt-2">
    <div class="col-md-6">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:
      "form-control border border-dark" %>
    </div>
  </div>
  <div class="col-md-12 d-flex justify-content-center mt-2">
    <div class="col-md-6">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control border border-dark" %>
    </div>
  </div>

  <div class="col-md-12 d-flex justify-content-center mt-2">
    <div class="col-md-6">
      <%= f.label :password_confirmation , class: "form-label"%>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control border border-dark" %>
    </div>
  </div>
  <div class="col-md-12 d-flex justify-content-center mt-2 ale">
    <div class="col-md-6 d-flex justify-content-center">
      <%= render"users/shared/error_messages", resource: resource %>
    </div>
  </div>
    <div class="col-md-12 d-flex justify-content-center mt-2">
      <div class="col-md-6 d-flex justify-content-center">
        <%= f.submit "Sign up" ,class: "btn btn-dark btn-w" %>
      </div>
    </div>
  <% end %>
  <div class="col-md-12 d-flex justify-content-center">
    <div class="col-md-6 d-flex justify-content-end">
        <%= link_to "Log in", new_session_path(resource_name),class: "btn btn-outline-dark btn-sm" %><br />
    </div>
  </div>
</div>
